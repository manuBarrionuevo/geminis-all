# Usa una imagen base de PHP con FPM
FROM php:8.2-fpm

# Actualiza e instala dependencias necesarias
RUN apt-get update && apt-get install -y \
    build-essential \
    libpng-dev \
    libjpeg62-turbo-dev \
    libfreetype6-dev \
    locales \
    zip \
    jpegoptim optipng pngquant gifsicle \
    unzip \
    git \
    curl \
    lua-zlib-dev \
    libmemcached-dev \
    default-mysql-client \
    nginx \
    supervisor

# Instala las extensiones de PHP necesarias
RUN docker-php-ext-install pdo_mysql mbstring exif pcntl bcmath gd

# Instala Composer
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# Establece el directorio de trabajo
WORKDIR /var/www

# Copia los archivos del backend al contenedor
COPY --chown=www-data:www-data backend /var/www

# Copia las configuraciones de nginx/php/supervisor
COPY deployment/nginx.conf /etc/nginx/sites-enabled/default
COPY deployment/php.ini /usr/local/etc/php/conf.d/app.ini
COPY deployment/supervisor.conf /etc/supervisord.conf
COPY deployment/opcache.ini /usr/local/etc/php/conf.d/opcache.ini
COPY deployment/run.sh /var/www/docker/run.sh

# Expone el puerto 9000 y el puerto 80
EXPOSE 9000
EXPOSE 80

# Comando para iniciar supervisord y php-fpm
CMD ["supervisord", "-c", "/etc/supervisord.conf"]
